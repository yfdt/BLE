<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_gray2"
    >

    <include
        android:id="@+id/person_actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/actionbar_container"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/person_actionbar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/person_container"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/shape_rectangle_white"
                >

                <TextView
                    android:id="@+id/person_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/person_info"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:textSize="24dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/person_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_info"
                    android:layout_marginTop="42dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="@string/person_name_text"
                    />

                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/person_name_text"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:text="Jason LIU"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/person_email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_name_text"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="24dp"
                    android:text="@string/person_email_text"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/person_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/person_email_text"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:text="Jason Liu@email.com"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/person_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_email_text"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="24dp"
                    android:text="@string/person_phone_text"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/person_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/person_phone_text"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:text="17768012441"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />


                <View
                    android:id="@+id/person_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCED0"
                    android:layout_below="@+id/person_phone_text"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    />



                <TextView
                    android:id="@+id/person_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_line1"
                    android:text="@string/person_address_text"
                    android:layout_marginTop="18sp"
                    android:layout_marginLeft="24dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/person_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_address_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/black"

                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_container"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="42dp"
                android:layout_marginTop="27dp"
                android:text="@string/person_tips_text"
                android:textColor="@color/text_red"
                android:textSize="14sp"
                android:layout_marginBottom="40dp"
                />

            
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@mipmap/person_header"
                />

        </RelativeLayout>


    </ScrollView>




</RelativeLayout>
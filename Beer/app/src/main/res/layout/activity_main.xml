<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_drawer"

    >

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            android:id="@+id/main_actionbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            layout="@layout/actionbar_container"
            android:layout_alignParentTop="true"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_actionbar"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/main_rent"
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginRight="18dp"
                    android:background="#03AEF0"
                    >

                    <View
                        android:layout_width="36dp"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="36dp"
                        />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="49dp"
                        android:text="@string/main_rent"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        />


                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="24dp"
                        android:src="@mipmap/main_arraw"
                        />



                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/main_office"
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginRight="18dp"
                    android:background="#0058EB"
                    android:layout_below="@+id/main_rent"
                    >

                    <View
                        android:layout_width="36dp"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="36dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="49dp"
                        android:text="@string/main_back_office"
                        android:textColor="@color/white"
                        android:letterSpacing="0.01"
                        android:textSize="24sp"
                        />


                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="24dp"
                        android:src="@mipmap/main_arraw"
                        />



                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/main_maintenance"
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginRight="18dp"
                    android:background="#F5A623"
                    android:layout_below="@+id/main_office"
                    >

                    <View
                        android:layout_width="36dp"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="36dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="49dp"
                        android:text="@string/main_maintenance"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        />


                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="24dp"
                        android:src="@mipmap/main_arraw"
                        />

                </RelativeLayout>

            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/main_menu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/main_menu_header"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/main_menu_header"
                />

            <TextView
                android:id="@+id/main_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_menu_header"
                android:layout_marginTop="10dp"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:id="@+id/main_menu_income"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/main_menu_name"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="24dp"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/main_menu_income"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/main_menu_income"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/main_menu_order"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/main_menu_income"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/main_menu_order"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/main_menu_order"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/main_menu_management"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/main_menu_order"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/main_menu_management"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/main_menu_bike"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/main_menu_map"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/main_menu_management"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/main_menu_map"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/main_menu_map"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/main_menu_maintenance"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/main_menu_map"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/main_menu_maintenance"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/main_menu_maintenance"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/main_menu_billing"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/main_menu_maintenance"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/main_menu_billing"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/main_menu_billing"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/main_menu_record"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/main_menu_billing"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/main_menu_record"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/main_menu_record"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/main_menu_out"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/main_menu_record"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="30dp"
                >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/main_menu_out"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:textColor="#9B9B9B"
                    android:text="@string/main_menu_out"
                    />


                <TextView
                    android:id="@+id/main_menu_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:textSize="14sp"
                    android:textColor="#9B9B9B"
                    android:text="v2.1.8"
                    />

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>


</android.support.v4.widget.DrawerLayout>

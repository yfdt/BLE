<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_order_list_serial_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:text="@string/order_list_serial"
        android:textSize="14sp"
        android:textColor="@color/text_gray"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/item_order_list_serial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_order_list_serial_text"
        android:layout_toRightOf="@+id/item_order_list_serial_text"
        android:textColor="@color/text_gray"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/item_order_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"
        android:text=""
        android:textColor="@color/text_red"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/item_order_list_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_order_list_serial_text"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:text="@string/order_list_start"
        android:textSize="13sp"
        android:textColor="@color/text_gray"
        />


    <TextView
        android:id="@+id/item_order_list_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/item_order_list_start_text"
        android:layout_toRightOf="@+id/item_order_list_start_text"
        android:textColor="@color/text_gray"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/item_order_list_riding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/item_order_list_start_text"
        android:layout_marginRight="18dp"
        android:textSize="13sp"
        android:textColor="@color/text_gray"
        />

    <TextView
        android:id="@+id/item_order_list_riding_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_order_list_riding"
        android:layout_toLeftOf="@+id/item_order_list_riding"
        android:text="@string/order_list_riding"
        android:textColor="@color/text_gray"
        android:textSize="13sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"
        android:background="@color/text_gray3"
        android:layout_below="@+id/item_order_list_start_text"
        />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/menu_deduction_all"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textColor="@color/text_gray"
        android:text="@string/order_menu_all"
        android:gravity="center"
        />

    <View
        android:id="@+id/menu_deduction_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_line_color"
        android:layout_below="@+id/menu_deduction_all"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/menu_deduction_wait"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textColor="@color/text_gray"
        android:text="@string/deduction_menu_wait"
        android:gravity="center"
        android:layout_below="@+id/menu_deduction_line1"
        />

    <View
        android:id="@+id/menu_deduction_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_line_color"
        android:layout_below="@+id/menu_deduction_wait"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />


    <TextView
        android:id="@+id/menu_deduction_paid"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textColor="@color/text_gray"
        android:text="@string/deduction_menu_paid"
        android:gravity="center"
        android:layout_below="@+id/menu_deduction_line2"
        />

</RelativeLayout>
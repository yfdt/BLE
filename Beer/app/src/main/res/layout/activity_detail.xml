<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_gray2"
    >

    <include
        android:id="@+id/detail_actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/actionbar_container"
        />

    <TextView
        android:id="@+id/detail_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="32dp"
        android:background="@color/white"
        android:layout_below="@id/detail_actionbar"
        android:text="@string/order_tips"
        android:textSize="14sp"
        android:textColor="@color/black"
        />


    <RelativeLayout
        android:id="@+id/detail_status"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/detail_tips"
        android:background="@color/white"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        >

        <TextView
            android:id="@+id/detail_status_bike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@string/order_status_text"
            android:textColor="@color/text_red"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/detail_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/order_status"
            android:textSize="18sp"
            android:textColor="@color/black"
            />



    </RelativeLayout>
    

    <RelativeLayout
        android:id="@+id/detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_status"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingBottom="30dp"
        >

        <TextView
            android:id="@+id/detail_serial_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:text="@string/order_serial"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/detail_serial"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@id/detail_serial_text"
            android:textSize="18sp"
            android:textColor="@color/text_yellow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            />

        <TextView
            android:id="@+id/detail_contract_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="24dp"
            android:layout_below="@id/detail_serial_text"
            android:text="@string/order_contract"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/detail_contract"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@id/detail_contract_text"
            android:text="@string/order_contract_text"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:background="@drawable/selector_blue"
            />

        <TextView
            android:id="@+id/detail_insurance_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="24dp"
            android:layout_below="@id/detail_contract_text"
            android:text="@string/order_insurance"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/detail_insurance"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@id/detail_insurance_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:textSize="18sp"
            android:textColor="@color/text_yellow"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/detail_start_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/detail_insurance_text"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="24dp"
            android:text="@string/order_start"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/detail_start"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@id/detail_start_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:textSize="18sp"
            android:textColor="@color/text_yellow"
            />


        <RelativeLayout
            android:id="@+id/detail_sub_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_start_text"
            >

            <TextView
                android:id="@+id/detail_end_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:text="@string/order_end"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/detail_end"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/detail_end_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:textSize="18sp"
                android:textColor="@color/text_yellow"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/detail_riding_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/detail_end_text"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="24dp"
                android:text="@string/order_riding"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/detail_riding"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/detail_riding_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:textColor="@color/text_yellow"
                android:textSize="18sp"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/detail_charge_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/detail_riding_text"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="24dp"
                android:text="@string/order_charge"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/detail_charge"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/detail_charge_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:textColor="@color/text_yellow"
                android:textSize="18sp"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/detail_profit_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/detail_charge_text"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="24dp"
                android:text="@string/order_profit"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/detail_profit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/detail_profit_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:textSize="18sp"
                android:textColor="@color/text_yellow"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/detail_total_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/detail_profit_text"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="24dp"
                android:text="@string/order_total"
                android:textSize="18sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/detail_total"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/detail_total_text"
                android:layout_marginRight="24dp"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:textColor="@color/text_yellow"
                android:gravity="center"
                />


        </RelativeLayout>



    </RelativeLayout>


    <TextView
        android:id="@+id/detail_submit"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/detail_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/order_submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/selector_red"
        />




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_gray2"
    >

    <include
        android:id="@+id/confirm_m_actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/actionbar_container"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/confirm_m_actionbar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/confirm_m_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/frag_confirm_tips"
                android:textSize="14sp"
                android:textColor="#4A4A4A"
                />

            <TextView
                android:id="@+id/confirm_m_serial_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag_confirm_serial_text"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_below="@+id/confirm_m_tips"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="36dp"
                />

            <TextView
                android:id="@+id/confirm_m_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/confirm_m_serial_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/confirm_m_failure_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag_confirm_failure"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_below="@+id/confirm_m_serial_text"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="48dp"
                />


            <EditText
                android:id="@+id/confirm_m_failure"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/confirm_m_failure_text"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/white"
                android:gravity="left|top"
                />

            <TextView
                android:id="@+id/confirm_m_time_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/confirm_m_failure"
                android:text="@string/frag_confirm_time"
                android:textColor="@color/black"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="42dp"
                android:textSize="18sp"
                android:gravity="center|left"
                />

            <Spinner
                android:id="@+id/confirm_m_time"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_below="@+id/confirm_m_failure"
                android:layout_marginTop="42dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/confirm_m_submit"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/confirm_m_time_text"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/selector_blue"
                android:text="@string/frag_confirm_submit"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginBottom="24dp"
                />

        </RelativeLayout>


    </ScrollView>




</RelativeLayout>
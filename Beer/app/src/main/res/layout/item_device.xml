<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/device_blue_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_scan_name"
        android:textSize="14sp"
        android:textColor="#616161"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        />


    <TextView
        android:id="@+id/device_blue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty"
        android:textSize="12sp"
        android:textColor="#616161"
        android:layout_toRightOf="@+id/device_blue_name_text"
        android:layout_alignBaseline="@+id/device_blue_name_text"
        android:layout_marginLeft="4dp"
        />


    <TextView
        android:id="@+id/device_blue_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty"
        android:textSize="12sp"
        android:textColor="#616161"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="4dp"
        />


    <TextView
        android:id="@+id/device_blue_signal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_scan_sign"
        android:textSize="12sp"
        android:textColor="#616161"
        android:layout_alignBaseline="@+id/device_blue_signal"
        android:layout_toLeftOf="@+id/device_blue_signal"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_blue_name_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/device_blue_address_text"
        android:text="@string/item_scan_address"
        android:textSize="12sp"
        android:textColor="#616161"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/device_blue_address"
        android:text="@string/empty"
        android:textSize="12sp"
        android:textColor="#616161"
        android:layout_toRightOf="@+id/device_blue_address_text"
        android:layout_alignBaseline="@+id/device_blue_address_text"
        android:layout_marginLeft="4dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/device_blue_address_text"
        />


</RelativeLayout>